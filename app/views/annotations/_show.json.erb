{
  "type": "Feature",
  "geometry": {
    "type": "Point",
    "coordinates": <%= annotation.coordinates.to_json %>
  },
  "properties": {
    "annotationType": "<%= annotation.annotation_type %>",
    "id":     <%= annotation.id %>,
    "map_id": <%= annotation.map_id %>,
    "style":  <%= annotation.style.to_json %>,
    "textContent":   "<%= annotation.text %>",
    "url":    "<%= url_for([@map, annotation]) %>"
  }
}