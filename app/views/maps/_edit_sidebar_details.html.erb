<!-- Map location -->
<% form_for :map, { :url => { :action => "update" }, :html => { :method => "put" } } do |m| %>
	<div class="form-group">
		<% m.label :location %>
		<% m.text_field :location %>
	</div>

	<div id="latlngs">
		<!-- Map latitude -->
		<div class="form-group">
			<%= m.label :lat %>:
			<%= m.text_field :lat, :class => "form-control" %>
		</div>

		<!-- Map longitude -->
		<div class="form-group">
			<%= m.label :lon %>
			<%= m.text_field :lon, :class => "form-control" %>
		</div>
	</div>

	<!-- Map description -->
	<div class="form-group">
		<%= m.label :description %>
		<%= m.text_area :description, :placeholder => "Type **Markdown** here.", :class => "form-control" %>
	</div>

	<!-- Map tags -->
	<div class="form-group">
		<%= render :partial => "edit_sidebar_details_tags" %>
	</div>

	<!-- Comments -->
	<div class="form-group">
		<%= render :partial => "edit_sidebar_details_comments" %>
	</div>
	
	<button class="btn btn-primary" type="submit">Save</button>	
<% end %><!-- End form -->
