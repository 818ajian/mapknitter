<!-- Map location -->
<% form_for :map, { :url => { :action => "update" }, :html => { :method => "put" }} do |m| %>
	<div class="form-group">
		<% m.label :location %>
		<% m.text_field :location %>
	</div>

	<div id="latlngs">
		<!-- Map latitude -->
		<div class="form-group">
			<%= m.label :lat %>:
			<%= m.text_field :lat, :class => "form-control" %>
		</div>

		<!-- Map longitude -->
		<div class="form-group">
			<%= m.label :lon %>
			<%= m.text_field :lon, :class => "form-control" %>
		</div>
	</div>

	<!-- Map description -->
	<div class="form-group">
		<%= m.label :description %>
		<%= m.text_area :description, :placeholder => "Type **Markdown** here.", :class => "form-control" %>
	</div>

	<!-- Map tags -->
	<div class="form-group">
		<label for="tags">Tags</label>
		<p><span id="tags">
			<% @map.tags.each do |tag| %>
				<a href="/tags/<%= tag.name %>">
					<span id="tag_<%= tag.id %>" class="label label-info">
						<%= tag.name %>
					</span>
				</a>
			<% end %>
		</span></p>
		<div class="input-group">
			<span class="input-group-addon">
				<span class="glyphicon glyphicon-tags"></span>
			</span>
			<input class="form-control" type="text" placeholder="Enter tags" name="tags"></input>
		</div>
	</div>

	<!-- Comments -->
	<div class="form-group">
		<%= m.label :comments %>
		<%= m.text_area :comments, :class => "form-control" %>
	</div>
	<button class="btn btn-primary" type="submit">Save</button>	
<% end %><!-- End form -->
